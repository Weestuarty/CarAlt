		</view>
	</variant>
	<variant name="withoutVideo">
		<view name="gamelist">
			<image name="cover9">
				<pos>0.5 0.5</pos>
				<origin>.5 0.5</origin>
				<maxSize>.21 0.4</maxSize>
				<imageType>physicalmedia, cover,screenshot</imageType>
				<zIndex>2</zIndex>
			</image>
		</view>
	</variant>
