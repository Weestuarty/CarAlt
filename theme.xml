	<variant name="withVideo">
		<view name="gamelist">

			<video name="cover9">
				<pos>0.5 0.5</pos>
				<origin>.5 0.5</origin>
				<maxSize>.4 0.4</maxSize>
				<imageType>physicalmedia, cover,screenshot</imageType>
