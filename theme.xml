	</aspectRatio>

	<variables>
		<mainFont>./assets/fonts/rost.otf</mainFont>
		<controlleroutline>./system/controller-outline/${system.theme}.svg</controlleroutline>
	</variables>

	<view name="system, gamelist">
		<image name="background">
